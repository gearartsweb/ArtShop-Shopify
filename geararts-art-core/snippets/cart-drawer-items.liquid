{%- if cart.item_count > 0 -%}
  <div class="cart-drawer-items-list">
    {% for item in cart.items %}
      <div class="cart-drawer-item" style="display: flex; gap: 15px; margin-bottom: 20px; border-bottom: 1px solid #f9f9f9; padding-bottom: 15px;">
        <div class="cart-item-image">
          <img src="{{ item.image | image_url: width: 100, height: 100 }}" alt="{{ item.title }}" width="70" height="70" style="width: 70px; height: 70px; object-fit: cover;">
        </div>
        <div class="cart-item-details" style="flex: 1;">
          <p class="cart-item-title" style="font-size: 13px; font-weight: 600; margin: 0;">{{ item.product.title }}</p>
          <p class="cart-item-price" style="font-size: 12px; color: #666; margin: 5px 0;">{{ item.final_price | money }}</p>
          <div class="cart-item-meta" style="display: flex; justify-content: space-between; align-items: center; margin-top: 5px;">
            <span style="font-size: 11px;">Qty: {{ item.quantity }}</span>
            <button type="button" class="remove-item" onclick="updateQty('{{ item.key }}', 0)" style="background:none; border:none; font-size: 10px; text-decoration: underline; cursor: pointer; color: #999;">Remove</button>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{%- else -%}
  <div class="empty-cart-msg" style="text-align: center; padding: 40px 0;">
    <p>Your studio cart is empty.</p>
    <a href="{{ routes.all_products_collection_url }}" class="view-details-link" style="font-size: 12px;">Browse Supplies</a>
  </div>
{%- endif -%}