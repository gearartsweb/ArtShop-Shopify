{% paginate collection.products by 48 %}
<div class="container">
  <header class="collection-header">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-description">{{ collection.description }}</div>
    {% endif %}
  </header>

  <div id="ProductGridContainer">
    <div class="product-grid">
      {% for product in collection.products %}
        {% render 'product-card', product: product %}
      {% else %}
        <p>No products found in this collection.</p>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>
</div>
{% endpaginate %}

<section class="product-page-area page-width">
  <div class="product-main-container">
    
    <div class="product-gallery">
      <div class="image-wrapper">
        {% if product.featured_image %}
          <div class="product-image-frame">
  <img src="{{ product.featured_image | image_url: width: 600, height: 600 }}" 
       alt="{{ product.title }}" 
       width="600"
       height="600"
       class="grid-product-img">
</div>
        {% endif %}
      </div>
      <a href= {{ routes.all_products_collection_url }} class="continue-shopping-link">‚Üê Continue Shopping</a>
    </div>

   <div class="product-grid-container">
  {% for product in collection.products %} <div class="product-grid-item">
      
      <a href="{{ product.url }}" class="product-grid-image-link">
        <div class="product-image-frame">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | image_url: width: 600, height: 600 }}" 
                 alt="{{ product.title }}" 
                 loading="lazy" 
                 width="600"
                 height="600"
                 class="grid-product-img">
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
      </a>
      
      <div class="product-grid-details">
        <span class="grid-vendor">{{ product.vendor }}</span>
        <h4 class="grid-title">{{ product.title }}</h4>
        <p class="grid-price">{{ product.price | money }}</p>
        
        {% form 'product', product, class: 'quick-add-form' %}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" class="grid-add-btn">+ ADD</button>
        {% endform %}
      </div>

    </div>
  {% endfor %}
</div>


</div>
</section>

{% schema %}
{
  "name": "Main Collection",
  "settings": [
    {
      "type": "header",
      "content": "Collection Settings"
    }
  ]
}
{% endschema %}