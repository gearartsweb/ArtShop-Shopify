{% if cart.item_count == 0 %}
  <p style="text-align: center; padding: 20px;">Your bag is empty.</p>
{% else %}
  {% for item in cart.items %}
    <div class="cart-item" style="display: flex; gap: 15px; margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
      <div class="cart-item-image">
        <img 
          src="{{ item.image | image_url: width: 150 }}" 
          alt="{{ item.product.title | escape }}" 
          width="{{ item.image.width }}" 
          height="{{ item.image.height }}" 
          loading="lazy"
          style="width: 70px; height: auto;">
      </div>
      <div class="cart-item-details">
        <h4 style="margin: 0; font-size: 14px;">{{ item.product.title }}</h4>
        <p style="margin: 5px 0;">{{ item.final_line_price | money }}</p>
        
        {% comment %} THE AJAX REMOVE BUTTON {% endcomment %}
        <button type="button" 
          onclick="removeCartItem('{{ item.key }}')"
          style="background: none; border: none; color: #ff0000; text-decoration: underline; font-size: 11px; cursor: pointer; padding: 0; display: block;">
          REMOVE
        </button>
      </div>
    </div>
  {% endfor %}
{% endif %}