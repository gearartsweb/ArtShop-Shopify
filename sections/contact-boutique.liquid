<section class="contact-area">
  <div class="page-width">
    <div class="contact-grid">
      
      <div class="contact-info">
        <h2 class="contact-title">{{ section.settings.title }}</h2>
        <p class="contact-text">{{ section.settings.text }}</p>
        <div class="contact-details">
          <p><strong>Address:</strong> {{ section.settings.address }}</p>
          <p><strong>Email:</strong> {{ section.settings.email }}</p>
          <p><strong>Phone:</strong> +27 62 251 0546</p>
        </div>
      </div>
      <div class="contact-social-channels">
  <h3 class="social-heading">{{ section.settings.social_heading | default: 'Follow the Art Shop' }}</h3>
  <div class="social-button-grid">
    
    <a href="https://www.instagram.com/theartshophermanus?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" target="_blank" class="social-btn instagram">
      <span class="social-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
      </span>
      INSTAGRAM
    </a>

    <a href="https://www.facebook.com/p/The-Art-Shop-Hermanus-100066807003010/" target="_blank" class="social-btn facebook">
      <span class="social-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
      </span>
      FACEBOOK
    </a>

  </div>
</div>

<style>
  .contact-social-channels {
    margin-top: 40px;
    text-align: center;
  }
  .social-heading {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px;
    color: #888;
  }
  .social-button-grid {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }
  .social-btn {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 25px;
    border: 1px solid #000;
    text-decoration: none;
    color: #000;
    font-size: 12px;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    min-width: 180px;
    justify-content: center;
  }
  
  /* Individual Brand Hover States */
  .social-btn.instagram:hover {
    background: #f09433; 
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: #fff;
    border-color: transparent;
  }
  .social-btn.facebook:hover {
    background: #1877F2;
    color: #fff;
    border-color: transparent;
  }

  .social-btn:hover .social-icon {
    transform: scale(1.1);
  }
  .social-icon { transition: transform 0.3s ease; display: flex; align-items: center; }

 @media screen and (max-width: 749px) {
  /* Instagram: Force the brand gradient and remove border */
  .social-btn.instagram {
    background: #f09433 !important;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%) !important;
    color: #fff !important;
    border-color: transparent !important;
  }

  /* Facebook: Force the brand blue and remove border */
  .social-btn.facebook {
    background: #1877F2 !important;
    color: #fff !important;
    border-color: transparent !important;
  }
  
  /* Ensure icons are also visible */
  .social-btn .social-icon {
    color: #fff !important;
  }
}
</style>

      <div class="contact-form-wrapper">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <p class="form-success">Thank you for your inquiry. We will contact you shortly.</p>
          {% endif %}

          <div class="form-group">
            <input type="text" name="contact[name]" placeholder="Full Name" required>
          </div>
          <div class="form-group">
            <input type="email" name="contact[email]" placeholder="Email Address" required>
          </div>
          <div class="form-group">
            <textarea name="contact[body]" placeholder="How can we help you?" rows="5"></textarea>
          </div>
          <button type="submit" class="btn-submit">Send Inquiry</button>
        {% endform %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Boutique Contact",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "Inquiries & Commissions" },
    { "type": "textarea", "id": "text", "label": "Text", "default": "Whether you are looking for a specific piece or a commission, our curators are here." },
    { "type": "text", "id": "address", "label": "Address", "default": "123 Art Avenue, London" },
    { "type": "text", "id": "email", "label": "Email", "default": "studio@geararts.com" }
  ],
  "presets": [{ "name": "Boutique Contact" }]
}
{% endschema %}