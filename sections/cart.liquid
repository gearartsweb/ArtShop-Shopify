<div class="page-width studio-cart-container" style="padding: 60px 20px; max-width: 1100px; margin: 0 auto; min-height: 60vh;">
  <div class="cart-header" style="text-align: center; margin-bottom: 50px;">
    <h1 style="font-size: 1.5rem; text-transform: uppercase; letter-spacing: 3px; font-weight: 300;">Your Cart</h1>
    <a href="{{ routes.all_products_collection_url }}" style="font-size: 11px; text-decoration: underline; color: #666; text-transform: uppercase; letter-spacing: 1px;">Continue Shopping</a>
  </div>

  {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="post" novalidate class="cart-form">
      <div class="cart-labels" style="display: flex; border-bottom: 1px solid #eee; padding-bottom: 15px; text-transform: uppercase; font-size: 10px; letter-spacing: 2px; color: #999;">
        <span style="flex: 2;">Product</span>
        <span class="hide-mobile" style="flex: 1; text-align: center;">Price</span>
        <span style="flex: 1; text-align: center;">Quantity</span>
        <span style="flex: 1; text-align: right;">Total</span>
      </div>

      {% for item in cart.items %}
        <div class="cart-item" style="display: flex; align-items: center; padding: 30px 0; border-bottom: 1px solid #f9f9f9;">
          
          <div style="flex: 2; display: flex; align-items: center; gap: 20px;">
            <div class="cart-image-wrapper" style="width: 110px; height: 110px; background: #f9f9f9; border: 1px solid #f0f0f0; display: flex; align-items: center; justify-content: center; overflow: hidden;">
              <img 
  src="{{ item.image | image_url: '240x240', crop: 'center' }}" alt="{{ item.title | escape }}" width="110" height="110" loading="lazy"  style="max-width: 85%; max-height: 85%; object-fit: contain;">
            </div>
            <div class="cart-item-details">
              <a href="{{ item.url }}" style="text-decoration: none; color: #000; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;">{{ item.product.title }}</a>
              {% unless item.product.has_only_default_variant %}
                <p style="font-size: 12px; color: #888; margin: 0 0 10px 0;">{{ item.variant.title }}</p>
              {% endunless %}
              <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" style="font-size: 10px; color: #cc0000; text-transform: uppercase; letter-spacing: 1px; text-decoration: none;">Remove</a>
            </div>
          </div>

          <div class="hide-mobile" style="flex: 1; text-align: center; font-size: 14px; color: #666;">
            {{ item.price | money }}
          </div>

          <div style="flex: 1; text-align: center;">
            <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0" 
              style="width: 45px; padding: 8px; border: 1px solid #ddd; text-align: center; font-family: inherit;">
          </div>

          <div style="flex: 1; text-align: right; font-weight: 600; font-size: 15px; color: #000;">
            {{ item.line_price | money }}
          </div>
        </div>
      {% endfor %}

      <div class="cart-footer" style="margin-top: 50px; display: flex; flex-direction: column; align-items: flex-end;">
        <div style="margin-bottom: 25px; border-top: 1px solid #000; padding-top: 20px; width: 300px; text-align: right;">
          <p style="margin: 0;">
            <span style="font-size: 12px; text-transform: uppercase; letter-spacing: 2px; color: #999;">Subtotal:</span>
            <span style="font-size: 20px; font-weight: 600; margin-left: 15px;">{{ cart.total_price | money }}</span>
          </p>
          <p style="font-size: 11px; color: #999; margin-top: 10px; font-style: italic;">Shipping & taxes calculated at checkout</p>
        </div>
        
        <div class="cart-actions" style="display: flex; gap: 15px;">
          <button type="submit" name="update" class="btn-secondary" style="background: transparent; border: 1px solid #000; padding: 14px 30px; cursor: pointer; font-size: 11px; letter-spacing: 2px; text-transform: uppercase; font-weight: 600;">Update</button>
          <button type="submit" name="checkout" class="btn-primary" style="background: #800000; color: #fff; border: none; padding: 14px 45px; cursor: pointer; font-size: 11px; letter-spacing: 2px; text-transform: uppercase; font-weight: 600;">Checkout</button>
        </div>
      </div>
    </form>
  {% else %}
    <div class="cart-empty" style="text-align: center; padding: 80px 0;">
      <p style="font-size: 16px; color: #666; margin-bottom: 30px;">Your creative toolkit is currently empty.</p>
      <a href="{{ routes.all_products_collection_url }}" style="background: #000; color: #fff; padding: 18px 40px; text-decoration: none; font-size: 12px; letter-spacing: 2px; text-transform: uppercase; font-weight: 600;">Start Shopping</a>
    </div>
  {% endif %}
</div>

<style>
  /* Responsive Styles */
  @media (max-width: 768px) {
    .hide-mobile { display: none; }
    .cart-labels { display: none; }
    .cart-item { flex-wrap: wrap; text-align: center; flex-direction: column; gap: 15px; }
    .cart-item > div { flex: none !important; width: 100% !important; justify-content: center !important; text-align: center !important; }
    .cart-image-wrapper { margin: 0 auto; }
    .cart-footer { align-items: center; }
    .cart-footer div { width: 100% !important; text-align: center !important; }
    .cart-actions { flex-direction: column; width: 100%; }
    .cart-actions button { width: 100%; }
  }
  
  .btn-primary:hover { background: #600000 !important; }
  .btn-secondary:hover { background: #800000 !important; color: #fff !important; }
</style>