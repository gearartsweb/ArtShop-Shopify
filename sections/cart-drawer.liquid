<div id="CartDrawer" class="cart-drawer">
  <div class="cart-drawer__overlay" onclick="toggleCart()"></div>
  <div class="cart-drawer__inner">
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title">YOUR BAG</h2>
      <button type="button" class="cart-drawer__close" onclick="toggleCart()">CLOSE</button>
    </div>

    <div id="CartDrawerItems" class="cart-drawer__content">
      {% render 'cart-drawer-items' %}
    </div>

    <div class="cart-drawer__footer" id="CartDrawerFooter">
      <div class="cart-total-row">
        <span>SUBTOTAL</span>
        <span>{{ cart.total_price | money }}</span>
      </div>
      <form action="/cart" method="post" id="cart-drawer-form">
        <button type="submit" name="checkout" class="checkout-button">CHECKOUT</button>
      </form>
    </div>
  </div>
</div>

<style>
  .cart-drawer { position: fixed; top: 0; right: 0; width: 100%; height: 100%; z-index: 100000; visibility: hidden; pointer-events: none; transition: all 0.3s ease; }
  .cart-drawer.is-active { visibility: visible; pointer-events: all; }
  .cart-drawer__overlay { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); opacity: 0; transition: opacity 0.3s ease; }
  .cart-drawer.is-active .cart-drawer__overlay { opacity: 1; }
  .cart-drawer__inner { position: absolute; top: 0; right: -450px; width: 450px; height: 100%; background: #fff; transition: right 0.3s ease; display: flex; flex-direction: column; }
  .cart-drawer.is-active .cart-drawer__inner { right: 0; }
  .cart-drawer__header { padding: 20px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center; }
  .cart-drawer__content { flex: 1; overflow-y: auto; padding: 20px; }
  .cart-drawer__footer { padding: 20px; border-top: 1px solid #eee; }
  .cart-total-row { display: flex; justify-content: space-between; margin-bottom: 15px; font-weight: bold; }
  .checkout-button { width: 100%; background: #000; color: #fff; border: none; padding: 18px; cursor: pointer; text-transform: uppercase; letter-spacing: 2px; }
  @media (max-width: 480px) { .cart-drawer__inner { width: 100%; right: -100%; } }
</style>

{% schema %} { "name": "Cart Drawer", "settings": [] } {% endschema %}