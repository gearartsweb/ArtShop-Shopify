<div id="CartDrawer" class="cart-drawer">
  <div class="cart-drawer__overlay" onclick="toggleCart()"></div>
  <div class="cart-drawer__inner">
    <div class="cart-drawer__header">
      <h2 style="margin:0; font-size: 1.2rem; letter-spacing: 2px;">YOUR BAG</h2>
      <button type="button" class="cart-drawer__close" onclick="toggleCart()" style="background:none; border:none; font-size:24px; cursor:pointer;">&times;</button>
    </div>

    <div id="CartDrawerItems" class="cart-drawer__content" style="flex: 1; overflow-y: auto; padding: 20px;">
      {% render 'cart-drawer-items' %}
    </div>

    <div class="cart-drawer__footer" id="CartDrawerFooter" style="padding: 20px; border-top: 1px solid #eee;">
      <div style="display:flex; justify-content:space-between; margin-bottom:15px; font-weight:bold;">
        <span>SUBTOTAL</span>
        <span>{{ cart.total_price | money }}</span>
      </div>
      <a href="/checkout" style="display:block; width:100%; background:#000; color:#fff; text-align:center; padding:18px; text-decoration:none; letter-spacing:2px;">CHECKOUT</a>
    </div>
  </div>
</div>

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 2147483647; /* Highest possible z-index */
    visibility: hidden;
    transition: visibility 0.3s;
  }
  .cart-drawer.is-active {
    visibility: visible;
  }
  .cart-drawer__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s;
  }
  .cart-drawer.is-active .cart-drawer__overlay {
    opacity: 1;
  }
  .cart-drawer__inner {
    position: absolute;
    top: 0;
    right: -450px; /* Hidden off-screen */
    width: 450px;
    height: 100%;
    background: #fff;
    display: flex;
    flex-direction: column;
    transition: right 0.3s ease-in-out;
    box-shadow: -10px 0 20px rgba(0,0,0,0.1);
  }
  .cart-drawer.is-active .cart-drawer__inner {
    right: 0;
  }
  .cart-drawer__header {
    padding: 20px;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  @media (max-width: 480px) {
    .cart-drawer__inner { width: 100%; right: -100%; }
  }
</style>

<script>
  function toggleCart() {
    const drawer = document.getElementById('CartDrawer');
    if (drawer) {
      drawer.classList.toggle('is-active');
      // Prevent body scroll when cart is open
      document.body.style.overflow = drawer.classList.contains('is-active') ? 'hidden' : '';
    }
  }
</script>

